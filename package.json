{
  "name": "natourspkg",
  "version": "1.0.0",
  "description": "landing page for natours",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/style.css -w",
    "devserver":"live-server",
    "start":"npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/style.comp.css ",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "compress:css": "node-sass css/style.concat.css css/style.css --output-style compressed",
    "build:css":"npm-run-all compile:sass concat:css  compress:css"
  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rajkishorreddy/myfirst-natours.git"
  },
  "author": "kishor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rajkishorreddy/myfirst-natours/issues"
  },
  "homepage": "https://github.com/rajkishorreddy/myfirst-natours#readme",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "concat": "^1.0.3",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1"
  }
}
